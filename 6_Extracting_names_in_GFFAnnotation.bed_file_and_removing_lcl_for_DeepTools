#!/bin/bash

cd ..

#extract gene names and positions from annotation
awk '$8=="gene" {print $1"\t"$2"\t"$3"\t"$4"\t"$5"\t"$6}' ./Annotation_Files/gff2bed_Marchantia.bed >/netscratch/dep_coupland/grp_turck/carina/Annotation_Files/gff2bed_Marchantia_6_columns.bed

awk '$8=="gene" {print $1"\t"$2"\t"$3"\t"$4"\t"$5"\t"$6}' ./Annotation_Files/gff2bed_MpTak1v5.1.bed >/netscratch/dep_coupland/grp_turck/carina/Annotation_Files/gff2bed_MpTak1v5.1_6_columns.bed

awk '$8=="gene" {print $1"\t"$2"\t"$3"\t"$4"\t"$5"\t"$6}' ./Annotation_Files/gff2bed_P*.bed >/netscratch/dep_coupland/grp_turck/carina/Annotation_Files/gff2bed_Physcomitrium_patens_6_columns.bed


